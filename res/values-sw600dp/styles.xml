<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="bottom_buttons" parent="@android:attr/buttonBarButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/Black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>
    
    <style name="statline_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    
    <style name="statline_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="stat_button_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minHeight">95dip</item>
        <item name="android:minWidth">115dip</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    
    <style name="meta_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    
    <style name="meta_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/Orange</item>
    </style>
    
</resources>
