<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="bottom_buttons_bar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@color/Black</item>
    </style>

    <style name="bottom_buttons" parent="@android:attr/buttonBarButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/Black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="statline_gls_blue">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/gls_blue_opac</item>
    </style>

    <style name="statline_number">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="statline_label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="header_label_small">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Orange</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    
    <style name="stat_button_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/gls_blue</item>
    </style>
    
    <style name="stat_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:minHeight">80dip</item>
        <item name="android:minWidth">80dip</item>
    </style>
    <style name="stat_button_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:minWidth">80dip</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="stat_left_row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    
    <style name="table_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    
    <style name="table_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">3dp</item>
        
    </style>
    
    <style name="table_label_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingRight">40dp</item>
    </style>
    
    <style name="padded_block">
        <item name="android:padding">15dp</item>
    </style>
    
    <style name="h1_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/gls_blue</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="h1_orange" parent="h1_blue">
        <item name="android:textColor">@color/Orange</item>
    </style>
    
    <style name="big_stat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">50sp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="big_stat_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/Orange</item>
    </style>
    
    <style name="editTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ems">10</item>
    </style>
    
    <style name="form_header_text" parent="stat_button_header">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>