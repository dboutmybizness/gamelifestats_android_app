<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollAVG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Orange" >

    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header_averages_totals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gls_blue"
            android:padding="8dp"
            android:text="@string/averages_n_totals"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/WhiteSmoke" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".Statbook$DummySectionFragment" >

            <TextView
                android:id="@+id/lab_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/totals"
                android:layout_marginTop="5dp"
                android:text="@string/games"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_games"
                android:layout_below="@+id/lab_games"
                android:text="@string/minutes"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_minutes"
                android:layout_below="@+id/lab_minutes"
                android:text="@string/points"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_rebs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_minutes"
                android:layout_below="@+id/lab_points"
                android:text="@string/rebounds"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_rebs_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_minutes"
                android:layout_below="@+id/lab_rebs"
                android:text="@string/orebounds"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_rebs_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_minutes"
                android:layout_below="@+id/lab_rebs_off"
                android:text="@string/drebounds"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_assists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_minutes"
                android:layout_below="@+id/lab_rebs_def"
                android:text="@string/assists"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_steals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_minutes"
                android:layout_below="@+id/lab_assists"
                android:text="@string/steals"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_blocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_minutes"
                android:layout_below="@+id/lab_steals"
                android:text="@string/blocks"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_turnovers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_minutes"
                android:layout_below="@+id/lab_blocks"
                android:text="@string/turnovers"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_fouls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_minutes"
                android:layout_below="@+id/lab_turnovers"
                android:text="@string/fouls"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/totals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@+id/lab_turnovers"
                android:text="@string/totals"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tot_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_games"
                android:layout_alignBottom="@+id/lab_games"
                android:layout_alignLeft="@+id/totals"
                android:layout_marginLeft="5dp"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_minutes"
                android:layout_alignBottom="@+id/lab_minutes"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_points"
                android:layout_alignBottom="@+id/lab_points"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_rebounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_rebs"
                android:layout_alignBottom="@+id/lab_rebs"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_reb_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_rebs_off"
                android:layout_alignBottom="@+id/lab_rebs_off"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_reb_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_rebs_def"
                android:layout_alignBottom="@+id/lab_rebs_def"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_assists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_assists"
                android:layout_alignBottom="@+id/lab_assists"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_steals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_steals"
                android:layout_alignBottom="@+id/lab_steals"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_blocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_blocks"
                android:layout_alignBottom="@+id/lab_blocks"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_turnovers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_turnovers"
                android:layout_alignBottom="@+id/lab_turnovers"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tot_fouls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_fouls"
                android:layout_alignBottom="@+id/lab_fouls"
                android:layout_alignLeft="@+id/tot_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/lab_turnovers"
                android:text="@string/avg"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/avg_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_games"
                android:layout_alignBottom="@+id/tot_games"
                android:layout_alignLeft="@+id/avg"
                android:layout_marginLeft="5dp"
                android:text="@string/empty"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_minutes"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_points"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_rebounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_rebs"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_reb_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_rebs_off"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_reb_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_rebs_def"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_assists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_assists"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_steals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_steals"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_blocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_blocks"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_turnovers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_turnovers"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/avg_fouls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_fouls"
                android:layout_alignLeft="@+id/avg_games"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lab_shooting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gls_blue"
            android:padding="8dp"
            android:text="@string/shooting_made_n_percentage"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/WhiteSmoke" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" >

            <TextView
                android:id="@+id/lab_twos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lab_made"
                android:layout_marginTop="5dp"
                android:text="@string/two_s"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_made"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/lab_fgs"
                android:text="@string/made"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/lab_threes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_twos"
                android:layout_below="@+id/lab_twos"
                android:text="@string/three_s"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/lab_fgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_twos"
                android:layout_below="@+id/lab_threes"
                android:text="@string/fgs"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/lab_fts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_twos"
                android:layout_below="@+id/lab_fgs"
                android:text="@string/fts"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lab_attempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/lab_made"
                android:text="@string/attempts"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/lab_perc_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/lab_attempts"
                android:text="@string/percent_sign"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/dis_fg2m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_twos"
                android:layout_alignLeft="@+id/lab_made"
                android:layout_marginLeft="10dp"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/dis_fg3m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_threes"
                android:layout_alignLeft="@+id/dis_fg2m"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/dis_fgm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_fgs"
                android:layout_alignLeft="@+id/dis_fg2m"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/dis_ftm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_fts"
                android:layout_alignLeft="@+id/dis_fg2m"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/dis_fg2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_twos"
                android:layout_alignLeft="@+id/lab_attempts"
                android:layout_marginLeft="20dp"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/dis_fg3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_threes"
                android:layout_alignLeft="@+id/dis_fg2a"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/dis_fga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_fgs"
                android:layout_alignLeft="@+id/dis_fg2a"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/dis_fta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_fts"
                android:layout_alignLeft="@+id/dis_fg2a"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/dis_fg2p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_twos"
                android:layout_alignLeft="@+id/lab_perc_sign"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/dis_fg3p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_threes"
                android:layout_alignLeft="@+id/dis_fg2p"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/dis_fgp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_fgs"
                android:layout_alignLeft="@+id/dis_fg2p"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/dis_ftp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lab_fts"
                android:layout_alignLeft="@+id/dis_fg2p"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
