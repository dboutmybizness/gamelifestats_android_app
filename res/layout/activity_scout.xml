<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Orange"
    android:orientation="vertical"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/brand_name"
        android:src="@drawable/bball_pro" />

    <ScrollView
        android:id="@+id/scout_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".Scout" >

            <TextView
                android:id="@+id/lab_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp"
                android:text="@string/name"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/v_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lab_name"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/lab_nickname"
                android:text="@string/empty"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/lab_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_name"
                android:layout_below="@+id/lab_name"
                android:layout_marginBottom="15dp"
                android:text="@string/nickname"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/lab_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_name"
                android:layout_below="@+id/lab_nickname"
                android:layout_marginBottom="15dp"
                android:text="@string/position"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/lab_jersey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lab_name"
                android:layout_below="@+id/lab_position"
                android:text="@string/jersey"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/v_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lab_nickname"
                android:layout_alignLeft="@+id/v_name"
                android:text="@string/empty"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/v_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lab_position"
                android:layout_alignLeft="@+id/v_name"
                android:text="@string/empty"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/v_jersey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lab_jersey"
                android:layout_alignLeft="@+id/v_name"
                android:text="@string/empty"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/edit_scout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@android:drawable/btn_default"
                android:text="@string/edit" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
